{
    "host": "127.0.0.1",
    "port": 8081,
    "thread_pool_size": 5,
    "database": {
        "name": "task"
    },
    "resources": {
        "icon_url": "/aTES/shared/task-tracker/img/logos/logo.svg"
    },
    
    "audit_object_info_queue": {
        "name": "aTES.task-tracker.object-info.queue"
    },
    
    "access_log_format": "%a %{X-Real-IP}i %t \"%r\" %s %b \"%{User-Agent}i\" %D",
    "logging": {
        "version": 1,
        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "formatter": "default",
                "level": "CRITICAL"
            },
            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "/var/log/aTES/task-tracker/task-tracker.log",
                "maxBytes": 1048576,
                "backupCount": 4,
                "formatter": "default",
                "level": "DEBUG"
            },
            "access_log": {
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "/var/log/aTES/task-tracker/access.log",
                "maxBytes": 1048576,
                "backupCount": 4,
                "formatter": "access_log",
                "level": "DEBUG"
            }
        },
        "loggers":{
            "aiohttp.access":{
                "handlers": ["access_log"],
                "level": "DEBUG"
            },
            "app":{
                "handlers": ["file"],
                "level": "DEBUG"
            },
            "m7-aiohttp":{
                "handlers": ["file"],
                "level": "DEBUG"
            },
            "task-tracker":{
                "handlers": ["file"],
                "level": "DEBUG"
            }
        },
        "formatters":{
            "default":{
                "format":"%(asctime)s - %(name)s - %(levelname)s - %(message)s"
            },
            "access_log":{
                "format":"%(message)s"
            }
        },
        "root": {
            "level": "ERROR",
            "handlers": ["console"]
        }
    }
}
